<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="100dp"
    android:background="#00FFFF"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/pic1"
            android:layout_width="187dp"
            android:layout_height="143dp"
            android:layout_marginBottom="472dp"
            android:src="@drawable/pest1"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="16dp" />

        <ImageView
            android:id="@+id/pic2"
            android:layout_width="187dp"
            android:layout_height="143dp"
            android:src="@drawable/pest"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.899"
            app:layout_constraintStart_toStartOf="@+id/pic1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.136" />

        <ImageView
            android:id="@+id/pic3"
            android:layout_width="185dp"
            android:layout_height="87dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_baseline_pets_24"
            app:layout_constraintBottom_toTopOf="@+id/text5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.433"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text4"
            app:layout_constraintVertical_bias="0.024" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="358dp"
            android:layout_height="62dp"
            android:layout_marginBottom="400dp"
            android:text="@string/they_deal_with_pest_control_on_the_following_rats_cockroaches_and_pet_pest_apart_from_pest_control_they_also_offer_cleaning_services"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="395dp"
            android:layout_height="88dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"

            android:text="@string/for_a_better_quality_delivery"
            android:textAllCaps="true"
            android:textColor="#F33D3D"
            android:textSize="33sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.703" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>